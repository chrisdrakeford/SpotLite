<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.parse.starter.UserActivity">

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/UserName"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4" />

    <TextView
        android:text="Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"
        android:textAppearance="@android:style/TextAppearance.Material.Large" />

    <Button
        android:text="Edit Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="76dp"
        android:layout_marginEnd="76dp"
        android:layout_marginTop="45dp"
        android:id="@+id/PostJob"
        android:layout_toRightOf="@+id/UserName"
        android:layout_toEndOf="@+id/UserName" />

    <Button
        android:text="Veiw Jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PostJob"
        android:layout_alignRight="@+id/PostJob"
        android:layout_alignEnd="@+id/PostJob"
        android:layout_marginTop="33dp"
        android:id="@+id/SearchProfiles"
        android:layout_alignLeft="@+id/PostJob"
        android:layout_alignStart="@+id/PostJob" />

    <Button
        android:text="Past Jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SearchProfiles"
        android:layout_alignRight="@+id/SearchProfiles"
        android:layout_alignEnd="@+id/SearchProfiles"
        android:layout_marginTop="29dp"
        android:id="@+id/PastJobs"
        android:layout_alignLeft="@+id/SearchProfiles"
        android:layout_alignStart="@+id/SearchProfiles" />

    <Button
        android:text="Log out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/UserName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/Logout" />

    <Button
        android:text="Find Jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PastJobs"
        android:layout_marginTop="41dp"
        android:id="@+id/FindJobs"
        android:layout_alignLeft="@+id/PastJobs"
        android:layout_alignStart="@+id/PastJobs"
        android:layout_alignRight="@+id/PastJobs"
        android:layout_alignEnd="@+id/PastJobs" />

</RelativeLayout>
